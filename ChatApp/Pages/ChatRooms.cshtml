@page
@model ChatApp.Pages.ChatModel
@{
    ViewData["Title"] = "Manager Chat Rooms";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Manage Chat Rooms</h1>
</div>

<form method="post">
    <div>
        <label for="roomName">Room Name:</label>
        <input id="roomName" name="roomName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create Room</button>
</form>

<hr />

@if (Model.ChatRooms.Any())
{
    <h3>Existing Chat Rooms:</h3>
    <ul>
        @foreach (var room in Model.ChatRooms)
        {
            <form method="post">
                <li>@room.Name <button type="submit" asp-page-handler="DeleteRoom" asp-route-roomName="@room.Name" class="btn btn-danger btn-sm">Delete</button></li>
            </form>
        }
    </ul>
}
else
{
    <p>No chat rooms created yet.</p>
}