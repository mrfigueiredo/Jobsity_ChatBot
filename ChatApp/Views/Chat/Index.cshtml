@page
@model ChatApp.Views.Chat.IndexModel
@{
    ViewData["Title"] = "Chat";
}

<div>
    <h1>Chat Rooms</h1>
    <ul id="chatRooms">
        @foreach (var chatRoom in Model.ChatRooms)
        {
            <li><a href="#" onclick="loadChatRoom(@chatRoom.Id)">@chatRoom.Name</a></li>
        }
    </ul>
</div>

<div>
    <h2>Messages</h2>
    <div id="messages"></div>
    <form id="messageForm" onsubmit="sendMessage(event)">
        <input type="text" id="messageInput" placeholder="Enter your message" />
        <button type="submit">Send</button>
    </form>
</div>

@section Scripts {
    <script>
        let currentChatRoomId = 0;

        const loadChatRoom = async (chatRoomId) => {
            currentChatRoomId = chatRoomId;
            const response = await fetch(`/api/Chat/Messages/${chatRoomId}`);
            const messages = await response.json();
            const messagesDiv = document.getElementById('messages');
            messagesDiv.innerHTML = '';
            messages.forEach(message => {
                const messageElement = document.createElement('div');
                messageElement.textContent = `${message.timestamp}: ${message.content}`;
                messagesDiv.appendChild(messageElement);
            });
        };

        const sendMessage = async (event) => {
            event.preventDefault();
            const messageInput = document.getElementById('messageInput');
            const message = {
                content: messageInput.value,
                chatRoomId: currentChatRoomId // you need to track the current chat room ID
            };

            await fetch('/api/Chat/Messages', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(message)
            });

            messageInput.value = '';
            loadChatRoom(currentChatRoomId);
        };
    </script>
}
